
@{
    ViewData["Title"] = "Create";
}

<h2>Create product</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <label>Name</label>
        <input type="text" name="Name" />
    </div>
    <div class="form-horizontal">
        <label>Price</label>
        <input type="number" name="Price" />
    </div>
    <div class="form-horizontal">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>


